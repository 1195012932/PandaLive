<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/rela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/livebase_image"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@mipmap/panda_sign" />

        <TextView
            android:id="@+id/livebase_nineimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/livebase_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/default_time_view"
            android:drawableLeft="@drawable/home_hot_live_icon"
            android:text="Live"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/liveitem_titler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/livebase_nineimage"
            android:text="name"
            android:padding="5dp"
            />

    </RelativeLayout>


</LinearLayout>