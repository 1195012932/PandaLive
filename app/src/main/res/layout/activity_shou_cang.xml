<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.panda.view.activity.CollectActivity">
<FrameLayout
    android:layout_width="match_parent"
    android:background="#00f"
    android:layout_height="?attr/actionBarSize">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shou_img"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/personal_back_img"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="收藏"
        android:textSize="30dp"
        android:textColor="#fff"
        android:gravity="center"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="编辑"
        android:id="@+id/shou_text"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_gravity="right"
        android:textSize="20dp"
        />
</FrameLayout>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/shou_tab"
        app:tabIndicatorColor="#00f"
        app:tabSelectedTextColor="#00f"
        ></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/shou_pager"></android.support.v4.view.ViewPager>
</LinearLayout>
