<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.panda.view.fragment.BroadcastFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <ImageView
            android:id="@+id/broadcast_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/tab_panda_live_pressed" />

        <TextView
            android:id="@+id/broadcast_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="uahbfwlisnbosgos"
            android:textColor="#fff"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_marginBottom="14dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <ListView
        android:id="@+id/broadcast_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>
