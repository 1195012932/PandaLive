<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/vit_rela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/vitmio_images"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/vitmio_playtimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/vitmio_images"
            android:background="@drawable/default_time_view"
            android:drawableLeft="@mipmap/play"
            android:text="Live"
            android:textColor="#FFFFFF"
            android:paddingLeft="5dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/vitmio_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/marvll_rela"
            android:padding="5dp"
            android:text="name" />

        <TextView
            android:id="@+id/marvell_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/vitmio_title"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/vitmio_title"
            android:text="年月日" />
    </RelativeLayout>


</LinearLayout>