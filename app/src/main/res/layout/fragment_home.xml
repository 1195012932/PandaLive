<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.panda.view.fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/frame_home_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/frame_home_preson_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:src="@mipmap/person_sign" />
        </android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/frame_home_titler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/toolbar2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="15dp"
            android:src="@mipmap/panda_sign" />

        <ImageView
            android:id="@+id/frame_home_Interaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/frame_home_titler"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:src="@drawable/hudong_sign" />

    </RelativeLayout>


    <ScrollView
        android:id="@+id/fragment_home_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/frame_home_rela"
        android:background="#E0DEDE">

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#FFFFFF" />

                <com.youth.banner.Banner
                    android:id="@+id/frame_home_banner"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_weight="0.3">

                </com.youth.banner.Banner>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/frame_textbroadcast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    android:text="熊猫播报"
                    android:textColor="#22579D" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="5dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <ImageView
                        android:id="@+id/frame_brocastiamge"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/tab_panda_eye_pressed" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <ListView
                        android:id="@+id/home_frag_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="true"
                        android:divider="#D3D3CB"
                        android:dividerHeight="1sp"></ListView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/frame_textshow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    android:text="直播秀场"
                    android:textColor="#22579D" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#E0DEDE" />

                <GridView
                    android:id="@+id/home_frag_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="395dp"
                    android:background="#FFFFFF"
                    android:numColumns="3"></GridView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/frame_textmarvellous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    android:text="精彩一刻"
                    android:textColor="#22579D" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#E0DEDE" />

                <GridView
                    android:id="@+id/frame_marvellousgrid"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="#FFFFFF"
                    android:numColumns="2"></GridView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/frame_textvidmio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    android:text="滚滚视频"
                    android:textColor="#22579D" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#E0DEDE" />

                <ListView
                    android:id="@+id/frame_vidmio"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="#FFFFFF"></ListView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/frame_textchina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#FFFFFF"
                    android:padding="10dp"
                    android:text="直播中国"
                    android:textColor="#22579D" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#E0DEDE" />

                <GridView
                    android:id="@+id/frame_china"
                    android:layout_width="match_parent"
                    android:layout_height="310dp"
                    android:background="#FFFFFF"
                    android:numColumns="3"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"></GridView>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>

